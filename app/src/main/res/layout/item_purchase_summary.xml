<?xml version="1.0" encoding="utf-8"?>
<!-- item_purchase_summary.xml (NEW - Layout for purchase summary items) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="#F5F5F5"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/summaryItemImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerInside"
        android:contentDescription="Product Image" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="8dp">

        <TextView
            android:id="@+id/summaryItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/summaryItemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$0.00"
                android:textSize="14sp"
                android:textColor="#666666"/>

            <TextView
                android:id="@+id/summaryItemQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" x 1"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/summaryItemSubtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$0.00"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        android:layout_gravity="center_vertical"/>

</LinearLayout>